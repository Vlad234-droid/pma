{
  "name": "pma",
  "version": "1.0.0",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/**/*"
  ],
  "scripts": {
    "bootstrap": "yarn install --frozen-lockfile && lerna bootstrap",
    "build": "cross-env BUILD_ENV=production lerna run --parallel build",
    "build:prod": "cross-env BUILD_ENV=production lerna run --parallel build:prod",
    "clean": "lerna run --parallel clean",
    "clean:all": "lerna run --parallel clean:all && rimraf node_modules",
    "lint": "prettier --write --config ./prettier.config.js './packages/*/src/**/*.{ts,tsx}'",
    "eslint:fix": "prettier --write --config ./prettier.config.js './packages/*/src/**/*.{ts,tsx}'",
    "on-pre-push": "commitlint --from=$(git merge-base master $(git rev-parse --abbrev-ref HEAD)) --to=HEAD",
    "run:dev": "lerna run --parallel run:dev",
    "run:prod": "cross-env BUILD_ENV=production lerna run --parallel run:prod",
    "ws:server": "yarn workspace @pma/server",
    "ws:client": "yarn workspace @pma/client",
    "ws:store": "yarn workspace @pma/store"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.12.11",
    "@commitlint/cli": "^13.1.0",
    "@commitlint/config-conventional": "^13.1.0",
    "@commitlint/config-lerna-scopes": "^13.1.0",
    "@typescript-eslint/eslint-plugin": "^4.10.0",
    "@typescript-eslint/parser": "^4.10.0",
    "babel-jest": "^26.6.3",
    "babel-loader": "8.1.0",
    "commitizen": "^4.2.2",
    "core-js": "^2.6.5",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "husky": "^4.3.7",
    "jest-environment-jsdom-sixteen": "^1.0.3",
    "lerna": "^4.0.0",
    "lint-staged": "^10.5.3",
    "patch-package": "6.4.7",
    "prettier": "^2.3.0",
    "prettier-eslint": "^12.0.0",
    "prettier-eslint-cli": "^5.0.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn lint-staged",
      "pre-push": "yarnPMA on-pre-push"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ],
    "*.{ts,tsx,md,json}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "volta": {
    "node": "14.17.5",
    "yarn": "1.22.10"
  },
  "dependencies": {
    "eslint-config-recommended": "^4.1.0"
  }
}
